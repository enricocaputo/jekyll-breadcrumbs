{% assign crumbs = page.url | split: '/' %}
{% for crumb in crumbs offset: 1 %}
  {% if forloop.last %}
  <span>&rsaquo;</span>
    <a>{{ crumb | replace:'-',' ' | remove:'/index.html' | capitalize }}</a>
  {% else %}
  <span>&rsaquo;</span>
    <a href="{% assign crumb_limit = forloop.index | plus: 1 %}{% for crumb in crumbs limit: crumb_limit %}{{ crumb | append: site.baseurl }}{% endfor %}">{{ crumb | replace:'-',' ' | remove:'/index.html' | capitalize }}</a>
  {% endif %}
{% endfor %}
